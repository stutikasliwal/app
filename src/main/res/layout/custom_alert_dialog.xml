<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/border_alert_dialog"
        android:orientation="vertical"
        android:padding="10dp">

        <FrameLayout
            android:id="@+id/frameLayoutTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="MESSAGE"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textStyle="bold" />

        </FrameLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/color_grey_divider" />

        <LinearLayout
            android:id="@+id/LinearLayoutMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:gravity="center_horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:text="Sample message text"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/color_grey_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/buttonPositive"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="5dp"
                android:layout_weight=".3"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="OK"
                android:textAllCaps="false"
                android:textSize="15sp" />

            <!-- <View
                 android:id="@+id/viewOkCancel"
                 android:layout_width="1dp"
                 android:layout_height="match_parent"
                 android:layout_margin="4dp"
                 android:visibility="gone"
                 android:background="@color/color_grey_divider" />
 -->
            <Button
                android:id="@+id/buttonNegative"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="5dp"
                android:layout_weight=".3"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="CANCEL"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:visibility="gone" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>